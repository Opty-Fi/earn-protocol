          "description": "[Vault is paused By Default] Should fail when user deposits in the vault contract",
          "actions": [
            {
              "contract": "Vault",
              "action": "userDepositRebalance(uint256)",
              "args": {
                "amount": "2000000000000000000"
              },
              "expect": "fail",
              "message": "paused"
            }
          ]
        },
