{
    "name": "earn-protocol",
    "description": "Core smart contract of OptyFi's Earn protocol",
    "version": "1.0.0",
    "homepage": "https://opty.fi",
    "repository": {
        "type": "git",
        "url": "https://github.com/opty-fi/earn-protocol"
    },
    "keywords": [
        "optyfi",
        "ethereum",
        "earn",
        "core"
    ],
    "files": [
        "contracts",
        "build"
    ],
    "engines": {
        "node": ">=10"
    },
    "devDependencies": {
        "@nomiclabs/hardhat-ethers": "^2.0.2",
        "@nomiclabs/hardhat-etherscan": "^2.1.2",
        "@nomiclabs/hardhat-waffle": "^2.0.1",
        "@typechain/ethers-v5": "^6.0.5",
        "@typechain/hardhat": "^1.0.1",
        "@types/chai": "^4.2.14",
        "@types/ethereumjs-abi": "^0.6.3",
        "@types/mocha": "^8.2.0",
        "@types/node": "^15.0.1",
        "@typescript-eslint/eslint-plugin": "^4.19.0",
        "@typescript-eslint/parser": "^4.19.0",
        "chai": "^4.3.0",
        "eslint": "^7.22.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "ethereum-waffle": "^3.2.2",
        "ethereumjs-util": "^7.0.8",
        "hardhat": "^2.1.2",
        "husky": "^5.2.0",
        "lint-staged": "^10.5.4",
        "mocha": "^8.2.1",
        "prettier": "^2.2.1",
        "prettier-plugin-solidity": "^1.0.0-beta.6",
        "rimraf": "^3.0.2",
        "solc": "0.6.10",
        "solhint": "^3.3.4",
        "solhint-plugin-prettier": "^0.0.5",
        "ts-node": "^9.1.1",
        "typechain": "^4.0.3",
        "typescript": "^4.1.3"
    },
    "scripts": {
        "clean": "rimraf ./cache && rimraf ./artifacts",
        "prepare": "husky install",
        "lint": "yarn prettier ./test/**/*.ts --check && eslint ./test/**/*.ts --ext .ts",
        "lint:fix": "yarn prettier ./test/**/*.ts --write && eslint ./test/**/*.ts --ext .ts --fix",
        "precompile": "yarn clean",
        "compile:waffle":"rimraf ./build && waffle .waffle.json",
        "compile": "yarn clean && hardhat compile",
        "test": "hardhat test test/test-opty/*.spec.ts",
        "test-clean": "yarn clean && yarn test",
        "test-fast": "TS_NODE_TRANSPILE_ONLY=1 hardhat test test/test-opty/*.spec.ts",
        "typechain": "hardhat typechain",
        "solhint": "./node_modules/.bin/solhint -f table contracts/**/*.sol ",
        "prettier:solidity": "./node_modules/.bin/prettier --write contracts/**/*.sol"
    },
    "license": "GPL-3.0-or-later",
    "dependencies": {
        "commander": "^7.0.0",
        "dotenv": "^8.2.0",
        "ethereumjs-abi": "^0.6.8",
        "ethers": "^5.0.29",
        "hardhat-gas-reporter": "^1.0.4",
        "pg": "^8.5.1",
        "web3": "1.3.4"
    },
    "lint-staged": {
        "./test/**/*.ts": "yarn lint:fix",
        "./contracts/!(library|utils)/!(ExponentialNoError).sol": "yarn solhint"
    }
}
